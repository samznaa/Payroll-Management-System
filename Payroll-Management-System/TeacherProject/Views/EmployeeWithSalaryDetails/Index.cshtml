@model IEnumerable<TeacherProject.Models.EmployeeWithSalaryDetailsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Paid Month</th>
            <th>Total Salary</th>
            
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthName)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.TotalSalary)
            </td>  
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>